<center>
  <table cellpadding="2" cellspacing="2">

    <% @assets.each_slice(10).each do |assets| %>
      <tr>
        <% assets.each do |asset| %>
          <td><%= link_to image_tag(asset.image.url(:thumb)), asset_path(asset) %></td>
        <% end %>
      </tr>
    <% end %>

  </table>
</center>