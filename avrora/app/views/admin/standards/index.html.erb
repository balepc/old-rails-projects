<% content_for :sub_menu do %>
  <%= link_to image_tag('admin/page_new.gif')+'Добавить стандарт', new_admin_standard_path %>
<% end %>

<% content_for :lang_menu do %>
  <%= render :partial => "/admin/shared/lang" %>
<% end %>

<table class="list-table">
  <tr>
    <td class="table_heading table_checkcol"><input type="checkbox" class="check" disabled/></td>
    <td class="table_heading" style="width:200px">Группа</td>
    <td class="table_heading">Название</td>

    <td class="table_heading table_linkcol">&nbsp;</td>
  </tr>

  <% @standards.each do |block| %>
    <tr class="<%= cycle('', 'grey')  %>" >
      <td class="table_checkcol"><input type="checkbox" class="check" disabled/></td>
      <td><%= block.is_group? ? "[ Группа стандартов ]" : block.standard.nil? ? "" : block.standard.name %></td>
      <td><%= bt block.name, 50 %></td>

      <td style="text-align:center">
        <%= link_to image_tag('admin/application_form_edit.png', :title=>'Редактировать стандарт'), edit_admin_standard_path(block) %>
        <%= link_to image_tag('admin/application_form_delete.png', :title=>'Удалить стандарт'), admin_standard_path(block), :method => :delete, :confirm => 'Вы действительно хотите удалить запись?' %>
      </td>
    </tr>
  <% end %>

</table>