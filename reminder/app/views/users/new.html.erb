<div class="authorization-form-wrap">    
  <h2>Регистрация</h2>
  <% @user.password = @user.password_confirmation = nil %>
  <% form_for :user, :url => users_path, :html => {:class => 'autho'} do |f| -%>
    <fieldset>
      <%= f.label :login, 'Логин:' %>
      <%= f.text_field :login, :class=>'textfield', :size=>30, :style=> @user.errors.on(:login) ? "background-color: red;" : "" %>
      <br />
      <%= f.label :email, 'E-mail:' %>
      <%= f.text_field :email, :class=>'textfield', :size=>30, :style=> @user.errors.on(:email) ? "background-color: red;" : "" %>
      <br />
      <%= label_tag 'Пароль:' %>
      <%= f.password_field :password, :class=>'textfield', :size=>30, :style=> @user.errors.on(:password) ? "background-color: red;" : "" %>
      <br />
      <%= label_tag 'password_confirmation', 'Подтвердите пароль:' %>
      <%= f.password_field :password_confirmation, :class=>'textfield', :size=>30, :style=> @user.errors.on(:password_confirmation) ? "background-color: red;" : "" %>
      <br />
    
      <p><%= submit_tag 'Отправить', :class => 'submit-reset'  %></p>
    </fieldset>
  <% end -%>
</div>