<div class="authorization-form-wrap">    
  <%= render :partial => 'menu' %>
  <div class="reminder-container">
    <!-- Profile -->
    <h2>Профиль</h2>
    <%=  flash[:notice] %>
    <% form_for @user, :user, user_path, :html => {:class => 'autho2'} do |f| %>
      <fieldset>
        <%= f.label :email, "E-mail:" %><%= f.text_field :email, :class => 'textfield' %><br/>
        <%= f.label :name, "Ваше имя:" %><%= f.text_field :name, :class => 'textfield' %><br/>
        <%= f.submit 'Изменить', :class => 'submit-reset' %>
      </fieldset>
    <% end %>
            
    <p style="clear: both;"><br><%= link_to 'Изменить пароль', '#', :onclick => "$('#password_change').toggle(); return false;" %></p>
    <div id="password_change" style="display:none;">
      <% form_for @user, :user, user_path, :html => {:class => 'autho2'} do |f| %>
        <fieldset>
          <%= f.label :password, "Пароль:" %><%= f.password_field :password, :class => 'textfield' %><br/>
          <%= f.label :password_confirmation, "Повторите пароль:" %><%= f.password_field :password_confirmation, :class => 'textfield' %><br/>
          <%= f.submit 'Изменить', :class => 'submit-reset' %>
        </fieldset>
      <% end %>
    </div>
  </div>

</div>
